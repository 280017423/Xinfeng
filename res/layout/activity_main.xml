<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/defalut_bg"
        android:baselineAligned="false" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:baselineAligned="false" >

            <LinearLayout
                android:id="@+id/rl_home_tab_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_home_tab"
                    style="@style/home_item_image_style"
                    android:contentDescription="@null"
                    android:src="@drawable/tab_home_normal" />

                <TextView
                    android:id="@+id/tv_home_tab"
                    style="@style/home_item_text_style"
                    android:text="首页"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_setting_tab_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_setting_tab"
                    style="@style/home_item_image_style"
                    android:contentDescription="@null"
                    android:src="@drawable/tab_setting_normal" />

                <TextView
                    android:id="@+id/tv_setting_tab"
                    style="@style/home_item_text_style"
                    android:text="遥控"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_more_tab_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_more_tab"
                    style="@style/home_item_image_style"
                    android:contentDescription="@null"
                    android:src="@drawable/tab_more_normal" />

                <TextView
                    android:id="@+id/tv_more_tab"
                    style="@style/home_item_text_style"
                    android:text="更多"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.7dp"
            android:layout_alignParentTop="true"
            android:background="#e0e0e0" />
    </RelativeLayout>

</LinearLayout>