<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    android:fadingEdge="none"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/title_with_back_btn_wrap" />

        <RelativeLayout
            android:id="@+id/rl_set_report_interval"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/tongyong_button_bg"
            android:clickable="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentTop="true"
                android:background="#e0e0e0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="设置上报间隔"
                android:textColor="@color/white"
                android:textSize="@dimen/size_2" />

            <TextView
                android:id="@+id/tv_report_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="2s"
                android:textColor="@color/white"
                android:textSize="@dimen/size_2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_set_functional_switch"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/tongyong_button_bg"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentTop="true"
                android:background="#e0e0e0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="设置功能开关"
                android:textColor="@color/white"
                android:textSize="@dimen/size_2" />

            <TextView
                android:id="@+id/tv_set_functional_switch"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/size_2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_set_start_up_time"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/tongyong_button_bg"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentTop="true"
                android:background="#e0e0e0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="设置开机时间"
                android:textColor="@color/white"
                android:textSize="@dimen/size_2" />

            <TextView
                android:id="@+id/tv_set_start_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/size_2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_set_shut_down_time"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/tongyong_button_bg"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentTop="true"
                android:background="#e0e0e0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="设置关机时间"
                android:textColor="@color/white"
                android:textSize="@dimen/size_2" />

            <TextView
                android:id="@+id/tv_set_shut_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/size_2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_set_shut_down_start_up"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/tongyong_button_bg"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentTop="true"
                android:background="#e0e0e0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="设置开/关机"
                android:textColor="@color/white"
                android:textSize="@dimen/size_2" />

            <TextView
                android:id="@+id/tv_set_shut_down_start_up"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="开机"
                android:textColor="@color/white"
                android:textSize="@dimen/size_2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_set_wifi_mode"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/tongyong_button_bg"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentTop="true"
                android:background="#e0e0e0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="设置内/外网"
                android:textColor="@color/white"
                android:textSize="@dimen/size_2" />

            <TextView
                android:id="@+id/tv_set_wifi_mode"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/size_2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_set_pm2.5"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/tongyong_button_bg"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentTop="true"
                android:background="#e0e0e0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="静电除尘自定义设置"
                android:textColor="@color/white"
                android:textSize="@dimen/size_2" />

            <TextView
                android:id="@+id/tv_set_pm_2_5"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/size_2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_set_frequency"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/tongyong_button_bg"
            android:clickable="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentTop="true"
                android:background="#e0e0e0" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentBottom="true"
                android:background="#e0e0e0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="设置频率(hz)"
                android:textColor="@color/white"
                android:textSize="@dimen/size_2" />

            <LinearLayout
                android:layout_width="114dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_sub_hz"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_sub_bg"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_big_1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_hz"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="30"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_2" />

                <Button
                    android:id="@+id/btn_add_hz"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_add_bg"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_big_1"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <RadioGroup
            android:id="@+id/rg_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rbtn_manual"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/shoudong_check_bg"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rbtn_auto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/zhineng_check_bg"
                android:button="@null"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbtn_sleep"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shuimian_check_bg"
                android:button="@null" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/cb_lock"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/lock_bg"
                android:button="@null"
                android:checked="false"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/cb_timer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/timer_bg"
                android:button="@null"
                android:checked="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>