		<receiver android:name="com.zjhbkj.xinfen.listener.NetWorkChangeBroadcastReceiver" >
			<intent-filter>
				<action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
			</intent-filter>
		</receiver>
